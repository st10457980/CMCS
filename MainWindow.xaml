<Window x:Class="CMCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" Height="500" Width="800">
    <Grid>
        <TabControl>
            <!-- Login Tab -->
            <TabItem Header="Login">
                <StackPanel Margin="20">
                    <TextBlock Text="Username:"/>
                    <TextBox Width="200"/>
                    <TextBlock Text="Password:" Margin="0,10,0,0"/>
                    <PasswordBox Width="200"/>
                    <TextBlock Text="Role:" Margin="0,10,0,0"/>
                    <ComboBox Width="200">
                        <ComboBoxItem Content="Lecturer"/>
                        <ComboBoxItem Content="Coordinator"/>
                        <ComboBoxItem Content="Manager"/>
                    </ComboBox>
                    <Button Content="Login" Width="100" Margin="0,20,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- Lecturer Dashboard -->
            <TabItem Header="Lecturer Dashboard">
                <StackPanel Margin="20">
                    <Button Content="Submit Claim" Width="200" Margin="0,10,0,0" Click="SubmitClaim_Click"/>
                    <Button Content="Upload Supporting Document" Width="200" Margin="0,10,0,0"/>
                    <Button Content="View Claim Status" Width="200" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- Manager Dashboard -->
            <TabItem Header="Manager Dashboard">
                <Grid Margin="20">
                    <DataGrid AutoGenerateColumns="True"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Approve" Width="100" Margin="10"/>
                        <Button Content="Reject" Width="100" Margin="10"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Claim History -->
            <TabItem Header="Claim History">
                <Grid Margin="20">
                    <DataGrid AutoGenerateColumns="True"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
