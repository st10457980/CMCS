<Window x:Class="CMCS.ClaimSubmission"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Claim Date:"/>
            <DatePicker Width="200"/>

            <TextBlock Text="Hours Worked:" Margin="0,10,0,0"/>
            <TextBox Width="200"/>

            <TextBlock Text="Amount:" Margin="0,10,0,0"/>
            <TextBox Width="200"/>

            <TextBlock Text="Upload Supporting Document:" Margin="0,10,0,0"/>
            <Button Content="Browse..." Width="100"/>

            <Button Content="Submit Claim" Width="150" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
